<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lawyer.NotesController">
   <children>
      <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="openNoteMenuItem" mnemonicParsing="false" onAction="#openNoteMenuItemOnClick" text="Open Note" />
              <MenuItem fx:id="createNewNoteMenuItem" mnemonicParsing="false" onAction="#createNewNoteMenuItemOnClick" text="Create New Note" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem fx:id="editNoteMenuItem" mnemonicParsing="false" onAction="#editNoteMenuItemOnCick" text="Edit Notes" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TextArea fx:id="editContentTextArea" layoutX="311.0" layoutY="27.0" prefHeight="309.0" prefWidth="281.0" />
      <Button layoutX="493.0" layoutY="349.0" mnemonicParsing="false" onMouseClicked="#saveYourNoteButtonOnClick" text="Save Your Note" />
      <Button layoutX="14.0" layoutY="349.0" mnemonicParsing="false" onMouseClicked="#backButtonOnClick" text="Back" />
      <Label fx:id="viewNoteContentLable" layoutY="27.0" prefHeight="309.0" prefWidth="289.0" style="-fx-background-color: #e4d9de;" textFill="#0a0a0a" />
   </children>
</AnchorPane>
